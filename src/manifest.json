{
  "manifest_version": 3,
  "name": "Claude UI/UX for AI Chats",
  "version": "1.0.0",
  "description": "Apply Claude's beautiful markdown styling to AI chat platforms",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/adapters/gemini.js",
        "content/adapters/kimi.js",
        "content/adapters/generic.js",
        "content/observer.js",
        "content/inject.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Claude UI/UX for AI Chats"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "claude_index.css",
        "content/claude-markdown.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}